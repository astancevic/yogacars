{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "noImplicitAny": false,
    "baseUrl": "src",
    // This sets 'src' as the base directory
    "paths": {
      "@/*": [
        "*"
      ]
      // This tells TypeScript to resolve `@` to the 'src' directory  }
    }
  }
}
